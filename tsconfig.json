{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types": ["@types/node"]
  },
  "include": ["src/**/*.ts"]
}
